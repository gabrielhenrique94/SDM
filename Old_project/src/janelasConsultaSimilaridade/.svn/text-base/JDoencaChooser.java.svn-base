    private void atualizaLista(ArrayList<Doenca> doencas) {

        list1.removeAll();
        Iterator iterator = doencas.iterator();
        while (iterator.hasNext()) {
            Doenca doenca = (Doenca) iterator.next();
            String nomeDoenca = doenca.getNome();
            list1.add(nomeDoenca);
        }
    }

