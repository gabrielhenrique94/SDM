    private void list1MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_list1MouseClicked
        Object selecionado = list1.getSelectedItem();
        DoencaDAO doedao = new DoencaDAO();
        Doenca doenca = doedao.selectPorNome(selecionado.toString());
        Object[] options = {"Sim", "Não"};

        int n = JOptionPane.showOptionDialog(autoReferencia,
                "O Diagnostico é de: " + doenca.getNome() + "?",
                "Confirmação",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.QUESTION_MESSAGE,
                null,
                options,
                options[1]);

        if (n == JOptionPane.YES_OPTION) {
            doencaRetorno = doenca;
            dispose();
        }



}//GEN-LAST:event_list1MouseClicked

