    private void btnConfirmarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnConfirmarActionPerformed
        if (!checkboxDoenca.getState()) {
            String selecionado = list1.getSelectedItem();
            String codigo = selecionado.split(" - ")[0];
            CasoDAO casodao = new CasoDAO();
            Caso ocaso = casodao.selectPorCodigo(Integer.parseInt(codigo));
            int codigodoenca = ocaso.getDoenca().getCodigo();
            DoencaDAO doencadao = new DoencaDAO();
            Doenca doe = doencadao.selectPorCodigo(codigodoenca);

            caso.setDoenca(doe);
        }else{
            caso.setDoenca(outraDoencaSelecionada);
        }
        String[] sintomas = list2.getItems();
        ArrayList<SintomaPeso> sintomasCaso = new ArrayList<SintomaPeso>();
        SintomaDAO dao = new SintomaDAO();
        for (String s : sintomas) {
            Sintoma sintoma = dao.selectNome(s);
            SintomaPeso sintomaPeso = new SintomaPeso(sintoma, caso.getDoenca(), 0);
            sintomasCaso.add(sintomaPeso);
        }
        caso.setSintomas(sintomasCaso);

        EquacaoBD.gravaCasoBD(caso);
        JOptionPane.showConfirmDialog(null, "Caso gravado no Banco com Sucesso");
        JanelaPrincipal.getInstance().jTabbedPaneHome.remove(this);
    }//GEN-LAST:event_btnConfirmarActionPerformed

    private void list1ItemStateChanged(java.awt.event.ItemEvent evt) {//GEN-FIRST:event_list1ItemStateChanged
        String selecionado = list1.getSelectedItem();
        String codigo = selecionado.split(" - ")[0];

        CasoDAO casodao = new CasoDAO();
        Caso codCaso = casodao.selectPorCodigo(Integer.parseInt(codigo));

        jTextField1.setText(Integer.toString(codCaso.getIdade()));
        jTextField2.setText(Float.toString(codCaso.getPeso()));
        jTextField3.setText(Float.toString(codCaso.getAltura()));
        jTextField4.setText(codCaso.getMedicacoes());

        list2.removeAll();
        list3.removeAll();
        Caso caso1 = this.caso;
        for (SintomaPeso p : codCaso.getSintomas()) {
            if (caso1.getSintomas().contains(p)) {
                list2.add(p.getSintoma().getNome());
            } else if (!caso1.getSintomas().contains(p)) {
                list3.add(p.getSintoma().getNome());
            }
        }


    }//GEN-LAST:event_list1ItemStateChanged

