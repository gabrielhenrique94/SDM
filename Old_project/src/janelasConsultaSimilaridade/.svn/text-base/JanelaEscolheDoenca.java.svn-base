    private void atualizaLista(ArrayList<CasoSimilar> casos) {
        list1.removeAll();
        for (CasoSimilar caso : casos) {
            String nomeDoenca = null;
            int codCaso;
            DoencaDAO dao = new DoencaDAO();
            Doenca doenca = dao.selectCodigo(caso.getDoenca().getCodigo());
            caso.setDoenca(doenca);
            nomeDoenca = caso.getDoenca().getNome();
            codCaso = caso.getCodigo();
            String item = codCaso + " - " + nomeDoenca + " - " + MetodosUteis.truncaDouble(caso.getSimilaridade(), 2) + '%';
            list1.add(item);
        }
    }

