    private void list3ItemStateChanged(java.awt.event.ItemEvent evt) {//GEN-FIRST:event_list3ItemStateChanged
        if (list1.getSelectedItem() != null) {
            String sintoma = list3.getSelectedItem();
            Object[] options = {"Sim", "Não"};
            int n = JOptionPane.showOptionDialog(this,
                    "O paciente está com " + sintoma + "?",
                    "Adicionar um sintoma",
                    JOptionPane.YES_NO_OPTION,
                    JOptionPane.QUESTION_MESSAGE,
                    null,
                    options,
                    options[1]);

            if (n == JOptionPane.YES_OPTION) {

                //ADICIONAR UM SINTOMA AO CASO
                String selecionado = list3.getSelectedItem();
                String sintomaNome = selecionado.toString();

                SintomaDAO sintDAO = new SintomaDAO();
                Sintoma sint = sintDAO.selectNome(sintomaNome);
                SintomaPeso sintomaPeso = new SintomaPeso(sint, null, 0);
                this.caso.getSintomas().add(sintomaPeso);
                list3.remove(selecionado);
                list2.add(selecionado);
                ReferenciasSimilaridade.getSintomasNaLista().add(selecionado);
                JanelaEscolheDoenca janelaNova = new JanelaEscolheDoenca(caso, paciente);
                JanelaPrincipal.getInstance().jTabbedPaneHome.add(janelaNova);
                JanelaPrincipal.getInstance().jTabbedPaneHome.remove(this);




            }
        }

    }//GEN-LAST:event_list3ItemStateChanged

